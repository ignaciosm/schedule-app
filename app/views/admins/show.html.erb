<div>
  <h1>
  <%= t('.greeting', company: @admin.company) %>
  <%= link_to t('.update_account'), edit_admin_registration_path, class: '' %>
</h1>

<h2><%= t('.button_header') %></h2>
<p>
  <%= link_to t('.add_schedule'), new_schedule_path, class: '' %>
  <%= link_to t('.view_schedules'), schedules_path, class: '' %>
</p>
<p>
  <%= link_to t('.add_employee'), new_employee_path, class: '' %>
  <%= link_to t('.add_available_time'), new_available_time_path, class: '' %>

</p>

<h2><%= t('.employees_header') %></h2>
<h3><%= t('.shift_lead_label') %></h3>
  <div>
    <% @admin.employees.employees_by_position('Shift Lead').each do |employee| %>
      <div class='active_employee'>
        <%= render partial: 'employees/shift_lead', locals: { employee: employee } %>
      </div>
    <% end %>
  </div>

<h3><%= t('.team_member_label') %></h3>
  <div>
    <% @admin.employees.employees_by_position('Team Member').each do |employee| %>
      <div class='active_employee'>
        <%= render partial: 'employees/team_member', locals: { employee: employee } %>
      </div>
    <% end %>
  </div>

<h3><%= t('.inactive_label') %></h3>
  <div>
    <% @admin.employees.inactive_employees.each do |employee| %>
      <div class='inactive_employee'>
        <%= render partial: 'employees/inactive_employee', locals: { employee: employee } %>
      </div>
    <% end %>
  </div>

</div>
