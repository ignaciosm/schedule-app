<% if @schedule.shifts.none? %>
  <%= link_to t('.add_shifts'),
            add_shifts_path(@schedule),
            method: :post,
            class: 'ui tiny button green' %>
<% else %>
  <%= link_to t('.remove_shifts'),
            remove_shifts_path(@schedule),
            method: :post,
            class: 'ui tiny button red',
            data: {confirm: 'Are you sure?'} %>
<% end %>
