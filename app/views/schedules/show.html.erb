<div class='container-fluid'>
  <h1>
    Week of
    <%= @schedule.grab_dates(@schedule.business_year, @schedule.business_week, 1) %>
    to <%= @schedule.grab_dates(@schedule.business_year, @schedule.business_week, 7) %>,
    <%= @schedule.business_year %>
  </h1>

  <p>
    <% if current_admin == @schedule.admin %>
      <%= render 'add_remove_employees' %>
      <%= link_to t('.set_schedule'), set_schedule_path(@schedule),
                  class: 'btn btn-default btn-xs' %>
    <% end %>

    <%= link_to t('.print_schedule'), print_schedule_path(@schedule),
                target: '_blank', class: 'btn btn-default btn-xs' %>

    <%= @employee_times.count %>
  </p>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <%= render 'schedules/table/header_days' %>
    </thead>
    <tbody>
      <%= render 'schedules/table/header_dates' %>
      <%= render 'schedules/table/managers' %>
      <%= render 'schedules/table/shift_leads' %>
      <%= render 'schedules/table/team_members' %>
    </tbody>
  </table>
</div>
