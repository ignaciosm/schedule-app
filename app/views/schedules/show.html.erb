<h1>
  Week of
  <%= @schedule.get_dates(@schedule.biz_year, @schedule.biz_week, 1) %>
  to <%= @schedule.get_dates(@schedule.biz_year, @schedule.biz_week, 7) %>,
  <%= @schedule.biz_year %>
</h1>
<% if @schedule.shifts.none? %>
  <%= link_to t('schedules.show.assign_shifts'),
            assign_shifts_path(@schedule),
            method: :post,
            class: 'ui tiny button green' %>
<% else %>
  <%= link_to t('schedules.show.unassign_shifts'),
            unassign_shifts_path(@schedule),
            method: :post,
            class: 'ui tiny button red',
            data: {confirm: 'Are you sure?'} %>
<% end %>
<% if @schedule.employees.none? %>
  <%= link_to t('schedules.show.assign_employees'),
            assign_employees_path(@schedule),
            method: :post,
            class: 'ui tiny button green' %>
<% else %>
  <%= link_to t('schedules.show.unassign_employees'),
            unassign_employees_path(@schedule),
            method: :post,
            class: 'ui tiny button red',
            data: {confirm: 'Are you sure?'} %>
<% end %>
<table class="ui green celled striped table unstackable fixed">
  <thead>
    <%= render 'schedules/table/header_days' %>
  </thead>
  <tbody>
    <%= render 'schedules/table/header_dates' %>
    <%= render 'schedules/table/managers' %>
    <%= render 'schedules/table/shift_leads' %>
    <%= render 'schedules/table/team_members' %>
  </tbody>
</table>
<h4>Assigned shifts</h4>
<% @schedule.shifts.each do |shift| %>
  <%= shift.start_time %>
<% end %>
