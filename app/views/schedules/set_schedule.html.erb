<div class='container-fluid'>
  <h3>
    Week of
    <%= @schedule.grab_dates(@schedule.business_year, @schedule.business_week, 1) %>
    to <%= @schedule.grab_dates(@schedule.business_year, @schedule.business_week, 7) %>,
    <%= @schedule.business_year %>
  </h3>
  <%= form_for(@schedule) do |f| %>
    <%= f.submit 'Finalize schedule' %>

    <table class="table table-striped table-bordered table-hover">
      <thead>
        <%= render 'schedules/table/header_days' %>
      </thead>
      <tbody>
        <%= render 'schedules/table/header_dates' %>
        <%= render 'schedules/table/managers', f: f %>
        <%= render 'schedules/table/shift_leads', f: f %>
        <%= render 'schedules/table/team_members', f: f %>
      </tbody>
    </table>
  <% end %>
</div>
