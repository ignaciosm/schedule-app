<%= form_for(@shift) do |f| %>
  Day of week (select all that apply): <br>
  <%= render 'form_checkboxes', f: f %><br> <br>

  <%= f.label :start_time %>
  <%= f.time_select :start_time, { minute_step: 15, ampm: true, prompt: true } %> <br><br>

  <%= f.label :end_time %>
  <%= f.time_select :end_time, { minute_step: 15, ampm: true, prompt: true } %> <br><br>

  <%= f.label :position %>
  <%= f.select :position, ['Shift Lead', 'Team Member'],
                          include_blank: true %><br><br>

  <%= f.submit t('.submit_button') %>
<% end %>
