<%= form_for(@shift) do |f| %>
    <%= f.label :day_of_week %>
    <%= f.text_field :day_of_week %> <br><br>

    <%= f.label :start_time %>
    <%= f.text_field :start_time %> <br><br>

    <%= f.label :end_time %>
    <%= f.text_field :end_time %> <br><br>

    <%= f.label :position %>
    <%= f.select :position, ['Shift Lead', 'Team Member'],
                            include_blank: true %><br><br>

    <%= f.submit t('.submit_button') %>
<% end %>
