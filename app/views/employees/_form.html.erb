<%= form_for(@employee) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :position %>
    <%= f.select :position, ['Shift Lead', 'Team Member'], include_blank: true %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
